<form method="post">

        <div class="form-group row has-success">
          <label for="example-text-input text-success " class="col-12 col-form-label"><h3 class="text-primary">عنوان المجلد"</h3></label>
          <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input value="{{category.title}}" class="form-control" type="text" name="title" id="example-text-input">
          </div>
        </div>
        <div class="form-group row has-success">
          <label for="example-text-input text-success " class="col-12 col-form-label"><h3 class="text-primary">صورة المجلد:</h3></label>
          <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="icon" id="example-text-input" value="{{category.icon}}">
          </div>
        </div>

        <div class="form-group has-success">
          <label class="text-success"><h3 class="text-primary"><h3 class="text-primary">نبذة عن المجلد</h3></label>
          <textarea class="form-control form-control-success mb-4" id="inputSuccess1" name="shortDescription">{{category.shortDescription}}</textarea>
        </div>
        <div class="form-group has-success">
          <label class="text-success"><h3 class="text-primary">وصف المجلد</h3></label>
          <textarea class="form-control form-control-success mb-4" id="inputSuccess1" name="description">{{category.description}}</textarea>
          <input class="btn btn-success btn-lg" type="submit" value="Submit">
        </div>
</form>
